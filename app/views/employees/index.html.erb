<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  
  <h1 class="h2 display-6">Funcionários</h1>

  <p style="color: green"><%= notice %></p>

  <div class="btn-toolbar mb-2 mb-md-0">
    <%= link_to "Novo Funcionário", new_employee_path, class: "btn btn-sm btn-outline-secondary" %>
  </div>
</div>


<div id="employees" class="table-responsive">
    <table class="table table-hover table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nome</th>
          <th scope="col">Centro de Custo</th>
          <th scope="col">Status</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
      <%  @employees.each do |employee| %>
        <tr>
          <td><%= employee.id %></td>
          <td><%= employee.name %></td>
          <td><%= employee.costcenters.pluck(:name).to_s.gsub(/\"/, ' ').gsub(/[\[\]]/, '') %></td>
          <td><% if (employee.status == true)  %>
                ATIVO
              <% else %>
                INATIVO
              <% end %>
          </td>
          <td><%= link_to edit_employee_path(employee) do %>
                <i class="fa-solid fa-file-pen align-middle"></i>
              <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>
