
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2 display-6">Empresas</h1>

  <p style="color: green"><%= notice %></p>

  <div class="btn-toolbar mb-2 mb-md-0">
    <%= link_to "Nova Empresa", new_company_path, class: "btn btn-sm btn-outline-secondary" %>
  </div>
</div>

<div id="companies" class="table-responsive">
    <table class="table table-hover table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Razão Social</th>
          <th scope="col">Marca</th>
          <th scope="col">Status</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company.id %></td>
          <td><%= company.name %></td>
          <td><%= company.brand %></td>
          <td><% if (company.status == true)  %> 
                ATIVO</td>
              <% else %>
                INATIVO
              <% end %>
          </td>
          <td><%= link_to edit_company_path(company) do %>
                <i class="fa-solid fa-file-pen align-middle"></i>
              <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>