<%= bootstrap_form_with(model: user) do |f| %>

  <%= f.text_field :username, label: "Nome", oninput: "this.value = this.value.toUpperCase()", autofocus: true, required: true %>

  <%= f.email_field :email, label: "E-mail", required: true %>

  <%= f.password_field :password, label: "Senha" %>

  <%= f.password_field :password_confirmation, label: "Confirme a senha" %>

  <div class="container">
    <%= f.collection_check_boxes :role_ids, Role.all, :id, :name, label: "Papéis de Usuário" %>
  </div>

  <div class="container">
    <%= f.collection_check_boxes :branch_ids, Branch.where(status: true), :id, :name, label: "Filial" %>
  </div>

  <%= f.check_box :admin, label: "É Administrador Master?" %>

  <%= f.submit "Salvar"%>

  <%= link_to "Cancelar", users_path, class:"btn btn-danger" %>

<% end %>